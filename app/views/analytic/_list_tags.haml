%ol.tags
	- n = 0
	- m = 0
	- while n < 10
		- entrie = tags.points[m]
		- if entrie.nil?
			- m = m+1
			- next
		- tag = clean_tag entrie.title
		- if tag.empty? 
			- m = m+1
			- next
		- m = m+1
		- n = n+1
		%li{:class => cycle("even", "odd")}
			%p 
				= link_to tag, tag_path( tag )
			%small	
				pageviews 
				= entrie.metrics[0][:pageviews]
