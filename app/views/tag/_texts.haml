- unless feed.blank? 
	- feed.each_with_index do |entry,index|
		- if index == 0
			%h3 
				= auto_link entry[2]
		- else
			%p 
				= auto_link entry[2]

		%span
			= image_tag_avatar( entry)
			= time_ago_in_words entry[4]
			= t(:by)
			= auto_link(  author_photo(entry[1])  ){|text| truncate(text, :length => 40)}
			= auto_link( entry[5]  ){|text| truncate(text, :length => 50)}
			