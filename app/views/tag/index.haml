#photos
	%h2 
		= link_to "Photos", :action => "photo", :tag => params[:tag]
	- unless @entries[:photos].blank? 
		#photos_content	
			%a{:href => @entries[:photos].first[5]} 
				= image_tag @entries[:photos].first[6]
			%h3 
				= @entries[:photos].first[2]
						
		#photos_thumbnails				
			- @entries[:photos][0...9].each do |entry|
				%a{:href => entry[5]} 
					= image_tag entry[6]
					= entry[2]
					%span
						= time_ago_in_words entry[4]
						= entry[1]
		#photos_nav
			= link_to t(:see_more)+" photos",{ :controller => "tag", :tag => @tag, :action => "photo"}, :class => "show"