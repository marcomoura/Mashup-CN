.texts 
	#microposts
		%h2 
			%a{:href => "/microtext/tag/#{params[:tag]}"} Microtexts
		#microposts_content
			= render :partial => 'texts', :locals => { :feed => @entries[:microtexts][0...5] }
			= link_to t(:see_more)+" microtexts",{ :controller => "tag", :tag => @tag, :action => "microtext"}, :class => "show"
			
#videos
	.border
		.container
			%h2 
				%a{:href => "/video/tag/#{params[:tag]}"} Videos
			- unless @entries[:videos].blank? 
				.border
				#videos_content	
					%p
						= @entries[:videos].first[2]
						â€”
						= time_ago_in_words @entries[:videos].first[4]
						= @entries[:videos].first[1]
					= embed_video @entries[:videos].first[5]				
				.border
				#videos_thumbnails				
					- @entries[:videos][0...10].each do |entry|
						%a{:href => entry[5], :id => id_video(entry[5]) , :title => entry[2] + " &mdash; " + time_ago_in_words( entry[4]) +" "+ entry[1]} 
							= image_tag entry[6]
				#videos_nav
					= link_to t(:see_more)+" videos",{ :controller => "tag", :tag => @tag, :action => "video"}, :class => "show"
