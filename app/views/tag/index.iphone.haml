!!! Mobile
%html
	%head
		%title Mashup Canção Nova mobile 
	    = stylesheet_link_tag "/jqtouch/jqtouch.min.css", "/jqtouch/themes/apple/theme.min.css"
	    = javascript_include_tag "/jqtouch/jquery.1.3.2.min.js", "/jqtouch/jqtouch.min.js", "mobile"

	%body
		#header
			%h1
				%a{:href=>"/"}
					%span MASHUP.cancaonova.mobi
			%form#search{ :action=>"/", :method=>"get"}
				%fieldset
					%label{ :for=>"tag"}
						= t(:form_tags_label)
					%input#tag{ :name=>"tags", :size=>"20", :value =>@tag }
					%input.button{:type=>"submit", :value => "IR"}

		#text2
			#microblogs
				%h2
					= link_to "Microblog",{ :controller => "tag", :tag => @tag, :action => "microblog"}	
				#microblogs_content
					= render :partial => 'texts', :locals => { :feed => @entries[:microblogs][0...5] }
				= link_to t(:see_more)+" microblog",{ :controller => "tag", :tag => @tag, :action => "microblog"}, :class => "show"	
							
			#microblogs
				%h2
					= link_to "Blog",{ :controller => "tag", :tag => @tag, :action => "blog"}	
				#microblogs_content
					= render :partial => 'texts', :locals => { :feed => @entries[:blogs][0...5] }
				= link_to t(:see_more)+" blog",{ :controller => "tag", :tag => @tag, :action => "blog"}, :class => "show"	

			#microblogs
				%h2
					= link_to "Notícias",{ :controller => "tag", :tag => @tag, :action => "news"}	
				#microblogs_content
					= render :partial => 'texts', :locals => { :feed => @entries[:news][0...5] }
				= link_to t(:see_more)+" notícias",{ :controller => "tag", :tag => @tag, :action => "news"}, :class => "show"	


		#videos
			%h2
				= link_to "Video",{ :controller => "tag", :tag => @tag, :action => "video"}		
			#videos_content
				= render :partial => 'texts', :locals => { :feed => @entries[:videos][0...5] }
			= link_to t(:see_more)+" video",{ :controller => "tag", :tag => @tag, :action => "video"}, :class => "show"	
	
		#photos
			%h2
				= link_to "Photo",{ :controller => "tag", :tag => @tag, :action => "photo"}		
			#photos_content
				= render :partial => 'texts', :locals => { :feed => @entries[:photos][0...5] }
			= link_to t(:see_more)+" photo",{ :controller => "tag", :tag => @tag, :action => "photo"}, :class => "show"	

		#footer
			%p.mashup	
				%a.cancaonova{ :href=>"http://cancaonova.com"}
					= image_tag "http://www.cancaonova.com/i/logo_cancaonova.gif", :size=>"98x67", :alt=>"Logo Canção Nova", :title=>"cancaonova.com"
				%span.copy 
					© copyright Canção Nova 
					= t(:copyright)
					%a{ :href => "http://mashup.cancaonova.com/", :title => "versão padrão"} Mashup.cancaonova.com ● 
					%a{ :href=>"mailto:multimedia@cancaonova.com"}
						= I18n.t('contact')
						Mashup
			.logo
				%a{ :href=>"http://euajudo.cancaonova.com"}
					= t(:institutional_member)
					●
				%a{ :href=>"http://shopping.cancaonova.com"} Shopping ●
				%a{ :href=>"http://noticias.cancaonova.com"}
					= t(:institutional_news) 
					●
				%a{ :href=>"http://mobile.cancaonova.com"} Mobile ●
				%a{ :href=>"http://webtvcn.com"} WEBtvCN

									
	%script{:type => "text/javascript"}
		var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
		document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

	%script{:type => "text/javascript"}
		try {
		var pageTracker = _gat._getTracker("UA-6535463-2");
		pageTracker._trackPageview();
		} catch(err) {}
